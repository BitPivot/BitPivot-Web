<div class='admin-area'>

  <% if @user && @user.role == 1 %>

    <%= render 'admin/header' %>

  <% else %>

    <div class='login'>
      <h1>Administrative login</h1>
      <%= form_for :login_user, url: '/admin/login' do |f| %>
        <%= f.text_field :login_email,
                         placeholder: @login_email_placeholder || 'Email',
                         class: @login_email_class %>
        <br/>

        <%= f.password_field :login_password,
                             placeholder: @login_password_placeholder || 'Password',
                             class: @login_password_class %>
        <br/>

        <%= f.submit 'Login', class: 'btn btn-mini btn-primary' %>
      <% end %>
    </div>

  <% end %>

</div>