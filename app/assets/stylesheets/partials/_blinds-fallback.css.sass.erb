@import mixins



.blinds-wrapper
  +position(relative, auto, auto, auto, auto)
  height: auto
  overflow: visible


.blind
  +position(relative, auto, auto, auto, auto)
  top: 0 !important
  height: auto
  overflow: visible

  header
    cursor: auto



.blind-content-area
  +position(relative, auto, auto, auto, auto)
  overflow: hidden

  .column
    width: 47.9%
    margin-right: 0
    padding: 0

    &:first-child
      margin-right: 4%