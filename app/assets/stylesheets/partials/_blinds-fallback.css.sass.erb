@import mixins



.blinds-wrapper
  +position(relative, auto, auto, auto, auto)
  height: auto
  overflow: hidden



.blind
  +position(relative, auto, auto, auto, auto)
  height: auto
  overflow: hidden

  header
    cursor: auto



.blind-content-area
  +position(relative, auto, auto, auto, auto)
  overflow: hidden

  .column
    width: 48%
    margin-right: 0
    padding: 0

    &:first-child
      margin-right: 4%