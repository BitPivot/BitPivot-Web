// Breakpoints
$breakpoint-tiny: 640px
$breakpoint-narrow: 900px



// Page Metrics
$margin: 20px

$page-header-height: 48px
$page-header-height-tiny: 32px

$blind-collapsed-height: 48px
$blind-collapsed-height-tiny: 32px

$blind-banner-height: 450px
$blind-banner-height-narrow: 350px
$blind-banner-height-tiny: 150px

$blind-content-header-border-width: 1px

$blog-post-max-width: 1000px



// Page settings from config
$total-blinds: <%= APP_CONFIG.total_blinds %>



// Font metrics
$page-font-size: 16px
$page-line-height: 1.3
$header-font-size: 22px

$blind-header-font-size: $blind-collapsed-height * 0.45
$blind-header-font-size-tiny: $blind-collapsed-height-tiny  * 0.55

$blog-font-size: 16px
$blog-line-height: 1.3
$blog-title-font-size: 45px
$blog-header-font-size: 25px
$blog-metadata-font-size: 13px

// Font faces
$blind-header-font: 'helvetica-light'
$blind-banner-font: 'helvetica-light'
$blind-content-font: 'helvetica'
$blind-content-header-font: 'helvetica-light'

$blog-font: 'helvetica'
$blog-header-font: 'helvetica-light'
$blog-code-font: 'andale-mono'
$blog-input-font: 'helvetica'
$blog-button-font: 'helvetica-light'



// Palette
$white: #fff
$black: #000
$gray-light: #ddd
$gray-medium: #888
$gray-dark: #444
$gray-text: #222
$purple-light: #a600a6
$purple-dark: #590059
$red-dark: #b00
$red-light: #f88
$blue-dark: #248
$green-dark: #284
$green-light: #4a6
$orange: #f80



// Page
$page-background-color: $black

// Header
$header-background-color: $black
$header-link-color: $gray-dark
$header-link-color-hover: $purple-light

// Blind headers
$blind-header-background-color-1: $purple-dark
$blind-header-background-color-2: darken($purple-dark, 3%)
$blind-header-background-color-3: darken($purple-dark, 6%)
$blind-header-background-color-4: darken($purple-dark, 9%)
$blind-header-text-color: $white
$blind-header-text-shadow-color: rgba($black, 0.75)

// Blind banners
$blind-banner-text-color: $white
$blind-banner-text-background-color: rgba($black, 0.7)

// Blind content
$blind-content-text-color: $gray-medium
$blind-content-headline-color: $white
$blind-content-header-text-color: $gray-light
$blind-content-header-border-color: $purple-dark

// Infographics
$infographic-caption-text-color: $gray-light
$infographic-key-purple-light: $purple-light
$infographic-key-purple-dark: $purple-dark
$infographic-key-gray-dark: $gray-dark

// Blog page
$blog-page-background: $gray-medium
$blog-post-background: $white
$blog-post-border-color: $gray-light

// Blog text
$blog-link-text-color: $purple-light
$blog-text-color: $gray-text
$blog-title-text-color: $purple-dark
$blog-post-metadata-text-color: $gray-medium
$blog-header-text-color: $white
$blog-header-background: $purple-dark

// Blog comments area
$blog-comments-background: lighten($gray-light, 10%)
$blog-comments-border-color: $gray-light

// Blog comment colors
$blog-comment-background: $blog-comments-background
$blog-comment-border-color: $gray-light
$blog-comment-text-color: $gray-text

// Blog admin comment colors
$blog-admin-comment-background: darken($blog-comment-background, 5%)
$blog-admin-comment-border-color: darken($blog-comment-border-color, 5%)
$blog-admin-comment-text-color: $purple-dark

// Blog create comment colors
$blog-create-comment-background: lighten($gray-light, 5%)
$blog-create-comment-border-color: $gray-light

// Blog input controls
$blog-comment-input-background: $white
$blog-comment-input-border-color: $gray-light
$blog-comment-input-text-color: $gray-text
$blog-comment-input-error-color: $red-dark
$blog-comment-button-background: $purple-dark
$blog-comment-button-text-color: $white

// Syntax highlighting
$blog-code-background: lighten($gray-light, 10%)
$blog-code-border-color: $gray-light
$blog-code-comment-color: lighten($gray-medium, 10%)
$blog-code-error-color: $red-light
$blog-code-keyword-color: $blue-dark
$blog-code-whitespace-color: $gray-medium
$blog-code-operator-color: $gray-medium
$blog-code-name-color: $purple-light
$blog-code-string-color: $green-light
$blog-code-number-color: $orange
